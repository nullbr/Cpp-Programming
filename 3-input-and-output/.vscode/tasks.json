{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Build with GCC 11",
			"command": "/home/linuxbrew/.linuxbrew/bin/g++-11",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /home/linuxbrew/.linuxbrew/bin/g++-11"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: build with clang 13.0.1",
			"command": "/home/linuxbrew/.linuxbrew/bin/clang++",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /home/linuxbrew/.linuxbrew/bin/clang++"
		}
	]
}